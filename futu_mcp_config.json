{
    "name": "futu-mcp-server",
    "description": "富途API MCP服务器 - 提供富途股票数据访问功能",
    "version": "1.0.0",
    "author": "TradeMind Team",
    "license": "MIT",
    "server": {
        "command": "python",
        "args": [
            "futu_mcp_server.py"
        ],
        "env": {
            "PYTHONPATH": "."
        }
    },
    "futu_api": {
        "default_host": "127.0.0.1",
        "default_port": 11111,
        "timeout": 30,
        "retry_attempts": 3
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "logs/futu_mcp_server.log"
    },
    "capabilities": {
        "tools": [
            {
                "name": "get_watchlist",
                "description": "获取富途用户的自选股列表"
            },
            {
                "name": "configure_futu_client",
                "description": "配置富途API客户端连接参数"
            },
            {
                "name": "get_client_status",
                "description": "获取富途客户端连接状态"
            }
        ]
    }
}