{
  "description": "富途MCP服务器的多种配置方式",
  "configurations": {
    "local_development": {
      "description": "本地开发模式 - 直接使用本地路径",
      "config": {
        "mcpServers": {
          "futu-mcp": {
            "command": "npx",
            "args": ["-y", "/Users/admin/Documents/futu/futu_mcp"],
            "env": {
              "FUTU_API_HOST": "127.0.0.1",
              "FUTU_API_PORT": "11111"
            }
          }
        }
      }
    },
    "published_package": {
      "description": "已发布npm包模式 - 类似context7",
      "config": {
        "mcpServers": {
          "futu-mcp": {
            "command": "npx",
            "args": ["-y", "@futu/mcp-server@latest"],
            "env": {
              "FUTU_API_HOST": "127.0.0.1",
              "FUTU_API_PORT": "11111"
            }
          }
        }
      }
    },
    "git_repository": {
      "description": "Git仓库模式 - 直接从Git安装",
      "config": {
        "mcpServers": {
          "futu-mcp": {
            "command": "npx",
            "args": ["-y", "git+https://github.com/your-repo/futu-mcp.git"],
            "env": {
              "FUTU_API_HOST": "127.0.0.1",
              "FUTU_API_PORT": "11111"
            }
          }
        }
      }
    },
    "tarball_url": {
      "description": "压缩包URL模式 - 从URL安装",
      "config": {
        "mcpServers": {
          "futu-mcp": {
            "command": "npx",
            "args": ["-y", "https://github.com/your-repo/futu-mcp/archive/main.tar.gz"],
            "env": {
              "FUTU_API_HOST": "127.0.0.1",
              "FUTU_API_PORT": "11111"
            }
          }
        }
      }
    }
  },
  "comparison": {
    "context7_style": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "pros": [
        "全球可访问",
        "版本管理自动化",
        "配置简洁",
        "自动更新"
      ],
      "cons": [
        "需要发布到npm",
        "网络依赖",
        "可能的下载延迟"
      ]
    },
    "our_current_style": {
      "command": "npx",
      "args": ["-y", "/Users/admin/Documents/futu/futu_mcp"],
      "pros": [
        "本地开发友好",
        "启动速度快",
        "实时代码修改",
        "私有项目"
      ],
      "cons": [
        "路径硬编码",
        "不便分享",
        "手动环境管理"
      ]
    }
  },
  "best_practices": {
    "development": "使用本地路径模式进行开发",
    "testing": "使用Git仓库模式进行测试",
    "production": "发布到npm并使用包名模式",
    "sharing": "使用Git仓库或npm包模式分享"
  }
} 